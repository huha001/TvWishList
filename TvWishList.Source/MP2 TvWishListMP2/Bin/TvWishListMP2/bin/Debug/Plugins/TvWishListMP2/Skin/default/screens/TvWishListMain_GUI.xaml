<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    xmlns:system="clr-namespace:System"
    xmlns:collections="clr-namespace:MediaPortal.UI.Presentation.DataObjects;assembly=MediaPortal.UI"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls" 
    >
    <Include.Resources>

        <!-- Main Model Definition-->
        <Model x:Key="Model" Id="46199691-8dc6-443d-9022-1315cee6152b"/>

        <!-- HeaderText -->
        <ResourceWrapper x:Key="Header_Text" EnableBindings="True"  Resource="{Binding Source={StaticResource Model},Path=Header}"/>


        

        <!-- Contents -->
        <ControlTemplate x:Key="Contents_Template">


            <DockPanel  DataContext="{Binding Source={StaticResource Model}}" LastChildFill="False">

                
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>

                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label  Grid.Column="0" Grid.Row="0" Wrap="False" Scroll="Auto" Content="{Binding Modus}" Color="{ThemeResource TextColor}" FontSize="22"  HorizontalAlignment="Left" VerticalAlignment="Top"/>


                    <ListView Name="MainListView" Grid.Column="0" Grid.Row="1"   ItemsSource="{Binding SkinItemList}" SelectionChanged="{CommandStencil Source={StaticResource Model}, Path=FocusedItemChanged}"  Style="{ThemeResource TvWishUpDownDeleteMenuListViewStyle}">
                    <ListView.Resources>
                        <CommandBridge x:Key="Menu_Command"  Command="{Binding Path=Command,Mode=OneTime}"/>
                    </ListView.Resources>
                     <!--   <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="test me" Command="{Binding ContextMenu1}"></MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>-->
                    </ListView>






                    <GroupBox   Header="[TvWishListMP2.101]" Grid.Column="2" Grid.Row="0"  Grid.RowSpan="2" Margin="0,0,0,15" Style="{ThemeResource ContentGroupBoxStyle}" FontSize="{ThemeResource SmallFontSize}">

                        <Label x:Name="MyProgram" Wrap="True" Scroll="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding TextBoxSkin}" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"/>
                         

                        


                    </GroupBox>







                    <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Wrap="False" Scroll="Auto" Content="{Binding Status}" Color="{ThemeResource TextColor}" FontSize="22" HorizontalAlignment="Left"/>

          </Grid>
                
        </DockPanel>

        </ControlTemplate>
        
    
    </Include.Resources>
</Include>